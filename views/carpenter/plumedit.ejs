<% layout("/layouts/boilerplate.ejs") %>

<style>
     body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;  /* reset any margin */
        padding: 0; /* reset padding */
    }

    h3 {
        color: #343a40;
        text-align: center;
        margin-top: 20px; /* add space below navbar */
    }

    form {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        margin: 20px auto;  /* center form */
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    input, textarea {
        width: 100%;
        padding: 8px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        font-size: 16px;
    }

    textarea {
        height: 100px;
        resize: none;
    }

    .valid-feedback {
        color: green;
        font-size: 14px;
        margin-top: 5px;
    }

    .invalid-feedback {
        color: red;
        font-size: 14px;
        margin-top: 5px;
    }

    button {
        width: 100%;
        padding: 10px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
        transition: 0.3s;
    }

    button:hover {
        background: #0056b3;
    }
</style>

<h3>Edit Service Profile</h3>

<form method="POST" action="/plumbers/<%=oneplumber._id %>?_method=PUT" class="needs-validation" novalidate> 
    
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" id="name" name="plum[name]" value="<%= oneplumber.name %>" required>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a name.</div>
    </div>

    <div class="form-group">
        <label for="service">Service</label>
        <input type="text" id="service" name="plum[service]" value="<%= oneplumber.service %>" required>
        <div class="valid-feedback">Great service!</div>
        <div class="invalid-feedback">Please specify the service.</div>
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="plum[description]" required><%= oneplumber.description %></textarea>
        <div class="valid-feedback">Description looks good!</div>
        <div class="invalid-feedback">Please enter a description.</div>
    </div>

    <div class="form-group">
        <label for="phone">Phone</label>
        <input type="text" id="phone" name="plum[phone]" value="<%= oneplumber.phone %>" pattern="[0-9]{10}" required>
        <div class="valid-feedback">Valid phone number.</div>
        <div class="invalid-feedback">Enter a valid 10-digit phone number.</div>
    </div>

    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" id="price" name="plum[price]" value="<%= oneplumber.price %>" required>
        <div class="valid-feedback">Price looks good!</div>
        <div class="invalid-feedback">Please enter a valid price.</div>
    </div>

    <div class="form-group">
        <label for="location">Location</label>
        <input type="text" id="location" name="plum[location]" value="<%= oneplumber.location %>">
        <div class="valid-feedback">Location added.</div>
        <div class="invalid-feedback">Please enter a location.</div>
    </div>

    <button type="submit">Edit the Profile</button>

</form>
