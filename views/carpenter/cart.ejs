
<% layout("/layouts/boilerplate") %>

    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .booking-card {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card {
            border: none;
            transition: transform 0.2s ease-in-out;
        }

        .card:hover {
            transform: scale(1.02);
        }

        .card-header {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            padding: 15px;
            border-radius: 10px 10px 0 0;
        }

        .list-group-item {
            font-weight: bold;
            border: none;
            font-size: 16px;
        }

        .icon {
            margin-right: 10px;
            color: #007bff;
        }

        .btn-details {
            background-color: #007bff;
            color: white;
            border-radius: 20px;
            padding: 10px 20px;
            font-weight: bold;
            text-decoration: none;
            transition: background 0.3s ease;
        }

        .btn-details:hover {
            background-color: #0056b3;
            color: white;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2 class="text-center mb-4">ðŸ“‹ Your Booking List</h2>

        <div class="row">
            <% for(let book of allbook) { %>
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <i class="fas fa-calendar-check"></i> Booking Details
                        </div>
                        <div class="card-body">
                            <p><strong><i class="fas fa-user icon"></i> Name:</strong> <%= book.name %></p>
                            <p><strong><i class="fas fa-tools icon"></i> Service:</strong> <%= book.service %></p>
                            <a href="/booking/<%= book._id %>" class="btn btn-details"><i class="fas fa-eye"></i> View Details</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

   