<header class="text-center my-4">
  <h1 class="display-4">Find Trusted Home Services</h1>
  <p class="lead">Book top-rated professionals for your home repairs and tasks.</p>
</header>

<form id="searchForm" class="input-group mb-4">
  <input 
    type="text" 
    class="form-control" 
    id="searchBox" 
    placeholder="Search for Plumber, Electrician, Carpenter..."
    required
  >
  <div class="input-group-append">
    <button class="btn btn-primary" type="submit">üîç Search</button>
  </div>
</form>

<script>
  document.getElementById("searchForm").addEventListener("submit", function (e) {
    e.preventDefault(); 
    let query = document.getElementById("searchBox").value.trim().toLowerCase();

    if (query.includes("plumber")) {
      window.location.href = "/plumbers";
    } else if (
      query.includes("electrician") ||
      query.includes("electrical")  ||
      query.includes("elctrical")
    ) {
      window.location.href = "/elctricals";
    } else if (query.includes("carpenter")) {
      window.location.href = "/carpenters";
    } else {
      window.location.href = "/home"; // fallback
    }
  });
</script>



