  <% layout("/layouts/boilerplate") %>
  
  <div class="container mt-5">

  
      <div class="card shadow-lg p-4">
          <h1 class="text-center text-primary">Create Your Service Profile</h1>
          <p class="text-center text-muted">Follow these simple steps to set up your professional service profile.</p>
          
          <div class="steps mb-4">
              <div class="alert alert-info">Step 1: Select your service category.</div>
              <div class="alert alert-info">Step 2: Click the "Add Service Profile" button.</div>
              <div class="alert alert-info">Step 3: Fill in your profile details on the next page.</div>
          </div>
          
          <form id="serviceForm" method="GET">
              <label for="serviceType" class="form-label fw-bold">Choose Your Service:</label>
              <select id="serviceType" class="form-select mb-3">
                  <option value="/elctricals/new">Electrical</option>
                  <option value="/plumbers/new">Plumber</option>
                  <option value="/carpenters/new">Carpenter</option>
              </select>
              
              <button type="submit" class="btn btn-primary w-100">Add Service Profile</button>
          </form>
      </div>
  </div>
  
  <style>
      .steps .alert {
          font-size: 1.1rem;
          font-weight: bold;
      }
      .carousel img {
          max-height: 400px;
          object-fit: cover;
      }
  </style>
  
  <script>
      document.getElementById("serviceForm").addEventListener("submit", function(event) {
          event.preventDefault(); 
          const serviceType = document.getElementById("serviceType").value;
          window.location.href = serviceType; 
      });
  </script>
  